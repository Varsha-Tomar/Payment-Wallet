<html>
  <head>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <!-- <script src="/javascripts/project.js"></script> -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <form action="/payment/balance_record" method="post">
      <div class="maincontainer">
        <!-- <h2></h2> -->
        <div class="mycontainer">
          <div class="navbar">
            <div
              style="
                padding-left: 20px;
                display: flex;
                align-items: center;
                justify-content: space-between;
              "
            >
              <img
                src="/images/credit-card.png"
                height="100px"
                style="margin-bottom: 17px"
              />
              <h3
                style="
                  margin-left: 300px;
                  margin-top: 5px;
                  font-size: 40px;
                  font-weight: 600;
                  color: #2980b9;
                "
              >
                Send Transfer
              </h3>
            </div>
          </div>
          <hr color="#6a89cc" style="width: 98%; margin-top: 40px; " />

          <div class="container" style="width: 98%">
            <div class="row" style="margin-top: 25px">
              <div class="col-6">
                <input
                required
                  type="text"
                  name="fromUserid"
                  class="form-control"
                  placeholder="from Userid"
                />
              </div>
              <div class="col-6">
                <input
                required
                  type="text"
                  name="toUserid"
                  class="form-control"
                  placeholder="to userid"
                />
              </div>
            </div>
            <div class="row" style="margin-top: 25px">
              <div class="col-6">
                <input
                required
                  type="text"
                  name="amount"
                  class="form-control"
                  placeholder="Enter Amount"
                />
              </div>
              
            </div>


            <div class="row" style="margin-top: 30px; margin-bottom: 10px">
            <div
              class="col-6"
              style="
                display: flex;
                align-items: center;
                justify-content: center;
              "
            >
              <button type="submit" name="btn" value="debit" class="btn btn-primary" style="width: 50%">
                Debit money
              </button>
            </div>

            <div
              class="col-6"
              style="
                display: flex;
                align-items: center;
                justify-content: center;
              "
            >
              <button type="submit" name="btn" value="credit" class="btn btn-primary" style="width: 50%">
                Credit money
              </button>
            </div>
          </div>

          <div class="row" style="margin-top: 10px">
            <div col-12 style="display: flex; justify-content: center">
              <font color="<%=color%>"> <%=message %> </font>
            </div>
          </div>

          </div>
        </div>
      </div>
    </form>
  </body>
</html>
