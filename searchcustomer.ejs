    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>

    <style>
        .maincontainer {
            font-family: barlow condensed;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            letter-spacing: 0.6px;

        }
        .box {
    background: #fff;
    width: 800px;
    height: auto;
    display: flex;
    align-items: center;
    flex-direction: column;
    border: 1px solid #7f8c8d;
    border-radius: 10px;
    padding: 10px;
  }
  .headingbox {
    display: flex;
    background: #46a1a6bd;
    width: 170px;
    margin: 10px 10px 0px 10px;
    padding: 5px;
    border-radius: 5px;
    align-self: flex-start;
  }
    </style>
    </head>

    <body>
        <form action="/payment/Search_customer">
            <div class="maincontainer">
    <div class="box">
      <div class="headingbox">
        <img src="/images/user.png" style="width: 25px; margin-right: 5px" />

        <div style="display: flex; flex-direction: column">
          <div style="color: #30336b; font-size: 16px; font-weight: 600">
            Payment Wallet
          </div>
          <div style="font-size: 12px; font-weight: 700; color: #2256e7">
            Search Customer
          </div>
        </div>
      </div>

      <hr color="#6a89cc" style="width: 98%" />
      <div class="container" style="width: 98%">
        <div class="row">
          <div class="col-6">
            <input
              type="text"
              required
              name="employeeid"
              class="form-control"
              placeholder="Employee  Id"
            />
          </div>
     
           <div class="col-6"  style="display: flex; justify-content: center; align-items: center">
            <button type="submit" class="btn btn-primary" style="width:50%;">Search</button>
          </div>  
       </div>

       <div col-12 style="display: flex; justify-content: center;">
              <font color=<%=color %>>
              <%=message %>
              </font>
            </div>

       </div>
      </div>
     </div>

        </form>
    </body>
</html>